<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="40dp"
    tools:context="konnov.commr.vk.calculator.ConverterActivity">

    <Spinner
        android:id="@+id/spinnerLeftSide"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/spinnerRightSide"
        tools:layout_editor_absoluteY="166dp" />

    <Spinner
        android:id="@+id/spinnerRightSide"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        tools:layout_editor_absoluteY="166dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:padding="10dp"
        android:text="Test"
        android:textColor="#000000"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="246dp" />

    <Spinner
        android:id="@+id/converterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:scrollbarSize="25dp"
        android:spinnerMode="dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/rightEditText"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/leftEditText"
        android:ems="10"
        android:hint="type here"
        android:inputType="number|numberSigned|numberDecimal" />

    <EditText
        android:id="@+id/leftEditText"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerLeftSide"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="type here"
        android:inputType="number|numberSigned|numberDecimal" />

</RelativeLayout>
