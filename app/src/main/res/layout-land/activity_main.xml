<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="konnov.commr.vk.calculator.MainActivity">


    <Button
        android:id="@+id/button_bracket_right"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/one"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_zero"
        tools:text="@string/right_bracket" />

    <Button
        android:id="@+id/button_bracket_left"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/one"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_bracket_right"
        tools:text="@string/left_bracket" />

    <Button
        android:id="@+id/button_one"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/one"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_two"
        app:layout_constraintTop_toBottomOf="@+id/button_four" />

    <Button
        android:id="@+id/button_two"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button_one"
        android:layout_toEndOf="@+id/button_one"
        android:layout_toRightOf="@+id/button_one"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/two"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_three"
        app:layout_constraintTop_toBottomOf="@+id/button_five" />

    <Button
        android:id="@+id/button_three"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button_two"
        android:layout_toEndOf="@+id/button_two"
        android:layout_toRightOf="@+id/button_two"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/three"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_multiply"
        app:layout_constraintTop_toBottomOf="@+id/button_six" />

    <Button
        android:id="@+id/button_four"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/four"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_five"
        app:layout_constraintTop_toBottomOf="@+id/button_seven" />

    <Button
        android:id="@+id/button_five"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_two"
        android:layout_toEndOf="@+id/button_four"
        android:layout_toRightOf="@+id/button_four"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/five"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_six"
        app:layout_constraintTop_toBottomOf="@+id/button_eight" />

    <Button
        android:id="@+id/button_six"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/button_five"
        android:layout_toEndOf="@+id/button_five"
        android:layout_toRightOf="@+id/button_five"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/six"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_minus"
        app:layout_constraintTop_toBottomOf="@+id/button_nine" />

    <Button
        android:id="@+id/button_seven"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/seven"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_eight"
        app:layout_constraintTop_toBottomOf="@+id/button_history" />

    <Button
        android:id="@+id/button_eight"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_five"
        android:layout_toEndOf="@+id/button_seven"
        android:layout_toRightOf="@+id/button_seven"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/eight"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_nine"
        app:layout_constraintTop_toBottomOf="@+id/button_clear" />

    <Button
        android:id="@+id/button_nine"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_five"
        android:layout_toEndOf="@+id/button_eight"
        android:layout_toRightOf="@+id/button_eight"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/nine"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintTop_toBottomOf="@+id/button_back" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button_nine"
        android:layout_toEndOf="@+id/button_nine"
        android:layout_toRightOf="@+id/button_nine"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/plus_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_equals" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_three"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_nine"
        android:layout_toEndOf="@+id/button_three"
        android:layout_toRightOf="@+id/button_three"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/minus_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_plus" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button_three"
        android:layout_alignLeft="@+id/button_minus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/button_minus"
        android:layout_below="@+id/button_six"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/multiply_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_minus" />

    <Button
        android:id="@+id/button_dot"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_two"
        android:layout_toEndOf="@+id/button_two"
        android:layout_toRightOf="@+id/button_two"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/dot_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_divide"
        app:layout_constraintTop_toBottomOf="@+id/button_three" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_dot"
        android:layout_toLeftOf="@+id/button_three"
        android:layout_toStartOf="@+id/button_three"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/zero"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_dot"
        app:layout_constraintTop_toBottomOf="@+id/button_two" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/button_dot"
        android:layout_alignEnd="@+id/button_multiply"
        android:layout_alignRight="@+id/button_multiply"
        android:layout_toEndOf="@+id/button_dot"
        android:layout_toRightOf="@+id/button_dot"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/divide_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_multiply" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_seven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button_eight"
        android:layout_toStartOf="@+id/button_eight"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/clear_symbol"
        android:textColor="@color/grey"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/button_back"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_nine"
        android:layout_toRightOf="@+id/button_nine"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/equals_symbol"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />
    </ScrollView>

    <Button
        android:id="@+id/button_back"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_nine"
        android:layout_alignTop="@+id/button_equals"
        android:layout_toEndOf="@+id/button_eight"
        android:layout_toLeftOf="@+id/button_equals"
        android:layout_toRightOf="@+id/button_eight"
        android:layout_toStartOf="@+id/button_equals"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/back"
        android:textColor="@color/grey"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/button_equals"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_above="@+id/button_seven"
        android:layout_alignTop="@+id/button_clear"
        android:layout_toEndOf="@+id/button_seven"
        android:layout_toLeftOf="@+id/button_back"
        android:layout_toRightOf="@+id/button_seven"
        android:layout_toStartOf="@+id/button_back"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/history"
        android:textColor="@color/grey"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/button_clear"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <fragment
        android:id="@+id/fragment"
        android:name="konnov.commr.vk.calculator.HistoryFragment"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_alignBottom="@+id/button_dot"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_minus"
        tools:layout="@layout/fragment_history" />

</android.support.constraint.ConstraintLayout>
